<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.mapper.CartMapper">

	<!-- 				 < 카트 관련 Mapper > 					-->

	<!-- 가입과 동시에 카트 생성 -->	
	<insert id="create">
	INSERT INTO cart(cart_email, cart_addDate)
	VALUES (#{email}, now())
	</insert>
	<!-- 가입과 동시에 카트 생성 -->
	
	
	<!-- 장바구니 조회 -->
	<select id="getCart" resultType="com.company.domain.CartVO">
	<![CDATA[
	SELECT *
	FROM cart JOIN products
	WHERE cart_email = #{cart_email}
	]]>
	</select>
	<!-- 장바구니 조회 -->
	
	
	<!-- 메뉴 전체 조회 -->
	<select id="getProduct" resultType="com.company.domain.CartVO">
	<![CDATA[
	SELECT *
	FROM products
	]]>
	</select>
	<!-- 메뉴 전체 조회 -->
	
	
	<!-- 탈퇴와 동시에 카트 삭제 -->
	<delete id="delete">
	DELETE FROM cart
	WHERE cart_email = #{email}
	</delete>
	<!-- 탈퇴와 동시에 카트 삭제 -->
	
</mapper>